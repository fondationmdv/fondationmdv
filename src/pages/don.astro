---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Don',
};
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">Don</Fragment>
    <Fragment slot="subtitle"> Vous pouvez soutenir les actions de la fondation avec un don! </Fragment>
  </Hero>

  <div style="position:relative;overflow:hidden;height:1200px;width:100%;">
    <iframe
      title="Donation form powered by Zeffy"
      style="position: absolute; border: 0; top:0;left:0;bottom:0;right:0;width:100%;height:100%"
      src="https://www.zeffy.com/embed/donation-form/30c3617e-12ec-4620-95ab-600f81431cc0"
      allow="payment"
      allowtransparency="true"></iframe>
  </div>
</Layout>
