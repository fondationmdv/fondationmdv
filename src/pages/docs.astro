---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Documents',
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Automne 2024',
        href: '/documents/bilan Fondation 2023-2024.doc.pdf',
        target: '_blank',
        icon: 'tabler:download',
      },
      {
        variant: 'primary',
        text: 'Bilan 2023-2024',
        href: '/documents/ProjetsMDV_Automne2024 - Feuille 1.pdf',
        target: '_blank',
        icon: 'tabler:download',
      }
    ]}
  >
    <Fragment slot="title">Documents divers</Fragment>
    <Fragment slot="subtitle"> Vous trouverez ici divers documents de la fondation comme les bilans des campagnes et des projets financés. N'hésitez pas à les consulter!</Fragment>
  </Hero>
</Layout>
